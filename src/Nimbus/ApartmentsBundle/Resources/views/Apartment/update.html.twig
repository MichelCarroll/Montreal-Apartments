{% extends 'NimbusApartmentsBundle::map.html.twig' %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('/bundles/nimbusapartments/js/apartment_form.js') }}" type="text/javascript"></script>
    
    <script type="text/javascript">
      
      var NimApart = NimApart || {};
      
      $(document).ready(function() {
        setTimeout("NimApart.refreshFormMarker(new google.maps.LatLng({{ point.latitude }}, {{ point.longitude }}));", 500);
      });
      
    </script>
{% endblock %}
    
{% block body %}

<form action="{{ path('update_apartment', { 'slug' : slug }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}

    <input type="submit" />
</form>

<div id="apartment_map"></div>
    
{% endblock %}