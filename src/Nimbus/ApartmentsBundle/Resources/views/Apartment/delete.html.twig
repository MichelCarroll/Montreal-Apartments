{% extends 'NimbusApartmentsBundle::map.html.twig' %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('/bundles/nimbusapartments/js/apartment_form.js') }}" type="text/javascript"></script>

{% endblock %}
    
{% block body %}

    <h2>Are you sure you want to delete this apartment?</h2>
    <br /><br />
    <form novalidate="novalidate" action="{{ path('delete_apartment', {'slug': slug}) }}" method="post">
      <div class="form-actions">
        <a href="{{ referrer_url }}" class="btn btn-primary">No</a>&nbsp;&nbsp;
        <input class="btn" type="submit" value="Yes" />
      </div>
    </form>
    
{% endblock %}