    

<form class="form-horizontal" action="{{ path('contact_apartment_action') }}" method="post">
  <fieldset>
    
    <legend>Contact the Poster</legend>
    
    <div class="control-group">
      <label class="control-label" for="contact[name]">Your Name</label>
      <div class="controls">
        <input required="required" type="text" class="input-xlarge" id="input01" name="contact[name]">
      </div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="contact[email]">Your Email</label>
      <div class="controls">
        <input required="required" type="email" class="input-xlarge" id="input01" name="contact[email]">
      </div>
    </div>
    
    <div class="control-group">
      <label class="control-label" for="contact[message]">Message</label>
      <div class="controls">
        <textarea required="required" class="med_textbox" name="contact[message]"></textarea>
      </div>
    </div>
    
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Send Message</button>
    </div>
    
    <input type="hidden" name="contact[apartment_slug]" value="{{ apartment.slug }}" />
    
  </fieldset>
</form>
